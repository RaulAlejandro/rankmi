<div id="request_<%= request.id %>" class="row" style="border: 1px #dedede solid; padding:3em; background-color:#fafafa">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-8">
        <h4><%= request.title %></h4>
      </div>
      <div class="col-md-4">
        <%#= localize request.created_at, format: :long %>
          <div class="row">
            <% get_vote  =  current_user.voted_as_when_voted_for request %>
            <div class="col-sm-6">
              <div align="right" class=""> 
                <%= link_to like_request_path(request.id), remote: true, method: :put, class: get_vote ? "up_vote txt-ocre" : "up_vote txt-gris-medio", title:"Pulse para publicar ME GUSTA." do %>
                    <i class="glyphicon glyphicon-thumbs-up"></i>
                    <span>Me gusta</span>
                <% end %>
              </div>
            </div>
            <div class="col-sm-6">
              <div align="right" class=""> 
                <%= link_to dislike_request_path(request.id), remote: true, method: :put, class: get_vote != false ? "down_vote txt-gris-medio" : "down_vote txt-ocre", title:"Pulse para publicar NO ME GUSTA." do %>
                    <i class="glyphicon glyphicon-thumbs-down"></i>
                    <span>No me gusta</span>
                <% end %>                     
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <div class='request_content' style="background-color:#fff; padding:1em">
      <% if action_name == 'show' %>
        <%= simple_format request.description %>  
      <% end %>
    </div>
  </div>
</div >
<br></br>
<div class="row">
  <div class="col-md-12" style="border: 1px #dedede solid; padding:2em; background-color:#fafafa">
    <h4>Comentarios</h5>                     
    <%= render "comments/form", comment: @request.comments.build %>  
    <br>
    <div id="comments" class="row">
        <%= render partial: "comments/comment", collection: @request.comments.where(parent_id: nil).order('created_at DESC'), as: :comment %>
    </div>
  </div>
</div>