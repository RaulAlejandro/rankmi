<div class="row" style="border: 1px #dedede solid; padding:30px 50px 30px 50px">
    <div class="col-md-12">
        <%= render partial: "form" %>
    </div>
</div>
<br>
<div class="row">
    <div class="col-md-12">
        <h3 style="border-bottom: 1px solid #dedede;">Requerimets</h3>
        <div class="row">
          <div class="col-md-6"></div>
          <div class="col-md-3"></div>
          <div class="col-md-3">
              <%= form_tag "index_invitations_path", :method => 'get', :id => "invitations_search", remote: true, role:'form' do %>
              <div class="inner-addon left-addon">
                  <i class="glyphicon glyphicon-search"></i>
                  <%= text_field_tag :search, params[:search], class:"form-control", id:"mailbox-search-bar", placeholder:"Search requests..."%>
              </div>
          <% end %>
          </div>
        </div> 
        <br>
        <div class="row">
            <div class="col-md-12">            
                <%= render partial: "requests" %>
            </div>
        </div>
    </div>
</div>



<style type="text/css">
/* enable absolute positioning */
.inner-addon { 
    position: relative; 
}

/* style icon */
.inner-addon .glyphicon {
  position: absolute;
  padding: 10px;
  pointer-events: none;
}

/* align icon */
.left-addon .glyphicon  { left:  0px;}
.right-addon .glyphicon { right: 0px;}

/* add padding  */
.left-addon input  { padding-left:  30px; }
.right-addon input { padding-right: 30px; }

</style>